<script type="application/javascript" xmlns="http://www.w3.org/1999/xhtml"><![CDATA[
(function(){
"use strict";

if (window.userChromejs) {
	window.userChromejs.uninit();
	delete window.userChromejs;
}
// 放置的位置, true为地址栏, false为可移动按钮
